<%= bootstrap_form_for [:admins, @book] do |f| %>
  <div class="row">
    <%= f.text_field :title, class: "form-control" %>

    <%= f.date_select :publish_date,class: "form-control" %>

    <%= f.number_field :page, class: "form-control" %>

    <%= f.collection_check_boxes :author_ids, @authors, :id, :name, include_blank: true %>

    <%= f.collection_check_boxes :category_ids, @categories, :id, :name, include_blank: true %>

    <%= f.submit @book.new_record? ? t("button.add") : t("update"), class: "btn btn-primary" %>
    </div>
<% end %>
