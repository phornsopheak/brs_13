<% @user ||= current_user %>
<div class="stats">
  <a href="<%= users_with_status_path @user, status: "following" %>">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    <%= t "titles.following" %>
  </a>
  <a href="<%= users_with_status_path @user, status: "followers" %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    <%= t "titles.followers" %>
  </a>
</div>
